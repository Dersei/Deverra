<Window x:Class="Deverra.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Deverra.GUI"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"  
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Image x:Name="OriginalImage" HorizontalAlignment="Left" VerticalAlignment="Stretch" Stretch="UniformToFill" MouseMove="FilteredImage_OnMouseMove"></Image>
        <Image Grid.Row="0" x:Name="FilteredImage" HorizontalAlignment="Left" VerticalAlignment="Stretch" Stretch="UniformToFill" MouseMove="FilteredImage_OnMouseMove"></Image>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:Name="OpenButton" Content="Open image" Click="OpenButton_OnClick"></Button>
            <ComboBox Grid.Column="1" x:Name="FilterCombo" SelectedIndex="0">
                <ComboBoxItem Content="Sepia"></ComboBoxItem>
                <ComboBoxItem Content="Negative"></ComboBoxItem>
                <ComboBoxItem Content="Sobel"></ComboBoxItem>
                <ComboBoxItem Content="Mean"></ComboBoxItem>
            </ComboBox>
            <Button Grid.Column="2" x:Name="RunButton" Content="Run" Click="RunButton_OnClick"></Button>
        </Grid>
    </Grid>
</Window>
